<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".transaction.TransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/money_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bargeld" />

        <Button
            android:id="@+id/check_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/girokonto" />

        <Button
            android:id="@+id/savings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sparguthaben" />

        <Button
            android:id="@+id/portfolio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/depot" />

    </LinearLayout>

    <EditText
        android:id="@+id/amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Betrag" />

    <EditText
        android:id="@+id/note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notiz" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speichern" />

</LinearLayout>